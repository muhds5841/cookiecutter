# SSH Service Environment Variables

# SSH settings
SSH_HOST=0.0.0.0
SSH_PORT=2222
SSH_LOG_LEVEL=INFO
SSH_PROCESS_HOST=process
SSH_PROCESS_PORT=8000
SSH_KEY_DIR=./keys
SSH_AUTHORIZED_KEYS_FILE=./keys/authorized_keys
SSH_HOST_KEY_FILE=./keys/ssh_host_rsa_key
SSH_ALLOW_PASSWORD_AUTH=false
SSH_ALLOW_PUBLIC_KEY_AUTH=true
SSH_MAX_CONNECTIONS=10
SSH_CONNECTION_TIMEOUT=60
SSH_IDLE_TIMEOUT=300
SSH_SFTP_ENABLED=true
SSH_SFTP_ROOT=./sftp_root
SSH_SFTP_READONLY=false

# Core settings (used by SSH Service)
CORE_LOG_LEVEL=INFO
