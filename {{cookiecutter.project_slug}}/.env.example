# Global settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Core settings
CORE_LOG_LEVEL=INFO
CORE_TEMP_DIR=/tmp
CORE_CONFIG_DIR=./config
CORE_MAX_WORKERS=4
CORE_ENABLE_METRICS=false
CORE_METRICS_PORT=9090

# Process settings
PROCESS_HOST=0.0.0.0
PROCESS_PORT=8000
PROCESS_LOG_LEVEL=INFO
PROCESS_ENGINE_TYPE=default
PROCESS_CACHE_SIZE=100
PROCESS_CACHE_TTL=3600
PROCESS_MAX_WORKERS=4
PROCESS_PLUGIN_DIR=./plugins
PROCESS_DEFAULT_LANGUAGE=en-US
PROCESS_DEFAULT_RESOURCE=default
PROCESS_DEFAULT_FORMAT=wav

# gRPC settings
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_LOG_LEVEL=INFO
GRPC_MAX_WORKERS=10
GRPC_MAX_CONCURRENT_RPCS=100
GRPC_PROCESS_HOST=process
GRPC_PROCESS_PORT=8000
GRPC_ENABLE_REFLECTION=true
GRPC_ENABLE_HEALTH_CHECK=true
GRPC_TLS_ENABLED=false
GRPC_TLS_CERT_PATH=
GRPC_TLS_KEY_PATH=

# REST settings
REST_HOST=0.0.0.0
REST_PORT=5000
REST_LOG_LEVEL=INFO
REST_WORKERS=4
REST_PROCESS_HOST=process
REST_PROCESS_PORT=8000
REST_CORS_ORIGINS=*
REST_API_PREFIX=/api
REST_ENABLE_DOCS=true
REST_DOCS_URL=/docs
REST_ENABLE_METRICS=false
REST_RATE_LIMIT_ENABLED=false
REST_RATE_LIMIT=60

# MCP settings
MCP_HOST=0.0.0.0
MCP_PORT=4000
MCP_LOG_LEVEL=INFO
MCP_PROCESS_HOST=process
MCP_PROCESS_PORT=8000
MCP_TRANSPORTS_SSE=true
MCP_TRANSPORTS_STDIO=false
MCP_TRANSPORTS_GRPC=false
MCP_TRANSPORTS_GRPC_PORT=4001
MCP_MAX_REQUEST_SIZE=10
MCP_ENABLE_RESOURCE_CACHE=true
MCP_RESOURCE_CACHE_SIZE=100
MCP_RESOURCE_CACHE_TTL=3600
